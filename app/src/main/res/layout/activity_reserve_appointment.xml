<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".ReserveAppointmentActivity">

    <TextView
        android:id="@+id/appointmentsText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/reservable_appointments"
        android:textSize="24sp"
        android:textAlignment="center"
        android:layout_marginTop="10dp"
        tools:listitem="@layout/reservable_appointment"/>

        <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/recyclerView"
        android:scrollbars="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"/>

    <Button
        android:id="@+id/newAppointment"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:text="@string/reserve"
        android:layout_gravity="center"
        android:onClick="reserveAppointment"/>

</LinearLayout>

